# i3-gaps

gaps inner 0
gaps outer 0

bindsym $mod+plus			gaps inner current plus 5
bindsym $mod+minus	gaps inner current minus 5

bindsym $mod+Shift+y  exec --no-startup-id "bash ~/.config/i3/scripts/i3resize.sh left"
bindsym $mod+Shift+u  exec --no-startup-id "bash ~/.config/i3/scripts/i3resize.sh down"
bindsym $mod+Shift+i  exec --no-startup-id "bash ~/.config/i3/scripts/i3resize.sh up"
bindsym $mod+Shift+o  exec --no-startup-id "bash ~/.config/i3/scripts/i3resize.sh right"

# sticky window
bindsym $mod+Shift+s sticky toggle

# floating
for_window [class="Pavucontrol"] floating enable

# default workspaces
for_window [class="Spotify"] move to workspace $workspace10
assign [class="Google-chrome"] $workspace1
assign [class="jetbrains-studio"] $workspace3
assign [class="Code"] $workspace3
assign [class="Slack"] $workspace2
assign [class="Thunar"] $workspace5

# workspace default monitors
workspace $workspace1 output eDP-1
workspace $workspace2 output eDP-1
workspace $workspace3 output DP-1
workspace $workspace4 output DP-1
workspace $workspace5 output DP-1
workspace $workspace6 output DP-1
workspace $workspace9 output DP-1
workspace $workspace10 output eDP-1

# Key-bindings

bindsym $mod+Shift+Delete	exec --no-startup-id lmc truemute ; exec $truepause ; workspace lmao ; exec terminator -e htop ; exec terminator -e ranger

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5% #decrease sound volume

bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle # mute sound

# Screenshot bindings
bindsym --release Print exec "scrot -m '/home/caiomcg/Pictures/screenshots/%s_%H%M_%d.%m.%Y_$wx$h.png'"
bindsym --release Shift+Print exec "scrot -s '/home/caiomcg/Pictures/screenshots/%s_%H%M_%d%m%Y_$wx$h.png'"
bindsym --release $mod+Shift+Print exec "scrot -u -d 4 '/home/caiomcg/Pictures/screenshots/%s_%H%M_%d%m%Y_$wx$h.png'"

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec exec light -A 5  # increase screen brightness with notification
bindsym XF86MonBrightnessDown exec exec light -U 5  # decrease screen brightness with notification

# Media player controls
bindsym XF86AudioPlay exec playerctl play

bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF85AudioPrev exec playerctl previous
bindsym $mod+Shift+f exec thunar
bindsym $mod+Shift+q kill
bindsym Print exec screenshot
bindsym $mod+d exec rofi -modi drun -show drun

# startup
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

exec --no-startup-id synclient NaturalScrolling=1 VertScrollDelta=-113
exec_always --no-startup-id feh --bg-scale ~/Pictures/wallpaper.jpg
exec_always --no-startup-id ~/.screenlayout/screen.sh 

exec --no-startup-id spotify
exec --no-startup-id google-chrome

exec --no-startup-id compton --paint-on-overlay --vsync opengl --dbe -f -D5
exec --no-startup-id i3-msg $workspace1
exec --no-startup-id nm-applet

# Move focused workspace between monitors
bindsym $mod+Ctrl+greater move workspace to output right
bindsym $mod+Ctrl+less move workspace to output left

# Disable title
for_window [class="^.*"] border pixel 1
